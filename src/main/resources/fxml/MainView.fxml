<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="view" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
			<tabs>
				<Tab fx:id="resultsTab" text="Resultados">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0">
							<children>
								<BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
									<center>
										<SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
											<items>
												<AnchorPane minHeight="0.0" minWidth="0.0">
													<children>
														<TableView fx:id="resultsTable" editable="true" layoutX="287.0" layoutY="31.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
															<columns>
																<TableColumn fx:id="nameColumn" editable="false" resizable="false" text="Nombre" />
																<TableColumn fx:id="emailColumn" prefWidth="75.0" resizable="false" text="E-mail" />
																<TableColumn fx:id="directoryColumn" editable="false" resizable="false" text="Directorio" />
																<TableColumn fx:id="scoreColumn" resizable="false" text="Puntuación" />
															</columns>
														</TableView>
													</children>
													<padding>
														<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
													</padding>
												</AnchorPane>
												<AnchorPane minHeight="0.0" minWidth="0.0">
													<padding>
														<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
													</padding>
												</AnchorPane>
											</items>
										</SplitPane>
									</center>
								</BorderPane>
							</children>
						</AnchorPane>
					</content>
				</Tab>
				<Tab fx:id="formDesignerTab" text="Diseñar formulario" />
				<Tab fx:id="consoleTab" text="Consola" />
			</tabs>
		</TabPane>
	</center>
	<top>
		<HBox alignment="BASELINE_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="saveResults" mnemonicParsing="false" onAction="#onSaveResults" text="Guardar resultados" />
				<Button fx:id="exportResults" mnemonicParsing="false" onAction="#onExportResults" text="Exportar resultados a CSV" />
				<Button fx:id="importEmails" layoutX="366.0" layoutY="15.0" mnemonicParsing="false" onAction="#onImportEmails" text="Importar e-mails desde CSV" />
			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>
	</top>
</BorderPane>
