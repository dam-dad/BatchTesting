<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<SplitPane fx:id="view" dividerPositions="0.25" prefHeight="480.0" prefWidth="640.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<items>
		<BorderPane maxWidth="250.0">
			<center>
				<ListView fx:id="submissionsList" BorderPane.alignment="CENTER" />
			</center>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
			<top>
				<HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
					<children>
						<Button fx:id="importButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onImportSubmission" prefHeight="32.0" HBox.hgrow="ALWAYS">
							<graphic>
								<FontIcon iconLiteral="far-file-archive" iconSize="18" />
							</graphic>
							<tooltip>
								<Tooltip text="Importar una entrega" />
							</tooltip>
						</Button>
						<Button fx:id="refreshButton" layoutX="52.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onRefreshSubmissions" prefHeight="32.0" HBox.hgrow="ALWAYS">
							<graphic>
								<FontIcon iconLiteral="fas-retweet" iconSize="18" />
							</graphic>
							<tooltip>
								<Tooltip text="Refrescar entregas" />
							</tooltip>
						</Button>
					</children>
					<padding>
						<Insets bottom="5.0" />
					</padding>
				</HBox>
			</top>
		</BorderPane>
		<StackPane>
			<children>
				<BorderPane fx:id="submissionPane" />
				<VBox fx:id="noSelectionPane" alignment="CENTER" spacing="5.0" styleClass="no-selection-pane">
					<children>
						<FontIcon iconColor="WHITE" iconLiteral="fas-mouse-pointer" iconSize="64">
							<effect>
								<DropShadow offsetX="5.0" offsetY="3.0" />
							</effect>
						</FontIcon>
						<Label styleClass="no-selection-label" text="Seleccione un directorio de entregas en el panel de la izquierda">
							<effect>
								<DropShadow offsetX="5.0" offsetY="3.0" />
							</effect>
						</Label>
					</children>
				</VBox>
			</children>
		</StackPane>
	</items>
</SplitPane>
